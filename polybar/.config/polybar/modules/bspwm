format = <label-state>

label-mode-padding    = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused             = %icon%
label-focused-background  = ${colors.background}
label-focused-foreground  = ${colors.magenta13}
label-focused-padding     = 1

; occupied = Inactive workspace on any monitor
label-occupied            = %icon%
label-occupied-background = ${self.label-focused-background}
label-occupied-foreground = ${colors.foreground}
label-occupied-padding    = 1

; empty = Active workspace on unfocused monitor
label-empty             =
label-empty-background  = ${self.label-focused-background}
label-empty-padding     = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent            = %icon%
label-urgent-background = ${colors.red9}
label-urgent-padding    = ${self.label-focused-padding}

