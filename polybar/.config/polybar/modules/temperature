[module/temperature]
type = internal/temperature

hwmon-path        = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_inpu
thermal-zone      = 0
warn-temperature  = 90
units             = true

format      = <ramp> <label>
format-warn = <ramp> <label-warn>

label             = %temperature%
label-background  = ${colors.background}
label-foreground  = ${colors.foreground}
label-padding     = 1

label-warn            = %temperature%
label-warn-foreground = ${colors.red9}
label-warn-background = ${colors.background}
label-warn-padding    = 1

ramp-0 = 1 
ramp-1 = 2 
ramp-2 = 3 
ramp-background = ${colors.background}
ramp-foreground = ${colors.foreground}
ramp-padding    = 1

; Set vim syntax highlighting
; vim:ft=dosini
