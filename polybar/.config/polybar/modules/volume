[module/volume]
type = internal/alsa

format-volume             = <ramp-volume> <label-volume>
format-volume-background  = ${colors.background}
format-volume-padding     = 1

label-volume            = %percentage:3%% |
label-volume-foreground = ${colors.foreground}

format-muted-background = ${self.format-volume-background}
format-muted-foreground = ${colors.red9}
format-muted-padding    = ${self.format-volume-padding}
format-muted-prefix     = 

label-muted             = %percentage:3%% |
label-muted-foreground  = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.blue12}

ramp-headphones-0 =  
ramp-headphones-1 =  
ramp-headphones-2 =  
ramp-headphones-foreground = ${colors.blue12}

