; Reload polybar in place with polybar-msg cmd restart
; enable-ipc must = true for this to work

[colors]
; Load from ~/.Xresources
background  = ${xrdb:background}
foreground  = ${xrdb:foreground}
black0      = ${xrdb:color0}
black8      = ${xrdb:color8}
red1        = ${xrdb:color1}
red9        = ${xrdb:color9}
green2      = ${xrdb:color2}
green10     = ${xrdb:color10}
yellow3     = ${xrdb:color3}
yellow11    = ${xrdb:color11}
blue4       = ${xrdb:color4}
blue12      = ${xrdb:color12}
magenta5    = ${xrdb:color5}
magenta13   = ${xrdb:color13}
cyan6       = ${xrdb:color6}
cyan14      = ${xrdb:color14}
white7      = ${xrdb:color7}
white15     = ${xrdb:color15}

[global/wm]
margin-top    = 5
margin-bottom = 5

[settings]
screenchange-reload = true  ; Reload bar if screen dimensions change

[bar/top_bar]
include-file = $HOME/.config/polybar/bars/top_bar

;===================;
;       Modules     ;
;===================;

[module/xwindow]
type = internal/xwindow

label = %title:0:30:...%

format-background   = ${colors.background}
format-foreground   = ${colors.foreground}
format-padding      = 1

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock

format-background       = ${colors.background}
format-foreground       = ${colors.foreground}
format-padding          = 1
format-prefix           = 
format-prefix-padding   = 1

label-layout                = %name%
label-indicator-padding     = 1
label-indicator-background  = ${colors.background}

[module/filesystem]
type = internal/fs

interval    = 25
mount-0     = /
mount-1     = /home
spacing     = 0

label-mounted-background  = ${colors.background}
label-mounted-foreground  = ${colors.foreground}
label-mounted-padding     = 1
label-mounted             = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%

label-unmounted-background  = ${colors.background}
label-unmounted-foreground  = ${colors.foreground}
label-unmounted             = %mountpoint% not mounted

[module/bspwm]
include-file = $HOME/.config/polybar/modules/bspwm

[module/i3]
type = internal/i3

ws-icon-0       = 1;
ws-icon-1       = 2;
ws-icon-2       = 3;
ws-icon-3       = 4;
ws-icon-4       = 5;
ws-icon-5       = 6;
ws-icon-6       = 7;
ws-icon-7       = 8;
ws-icon-8       = 9;
ws-icon-9       = 10;
ws-icon-default = 

enable-click    = true
enable-scroll   = true
wrapping-scroll = false
reverse-scroll  = false
index-sort      = true

format = <label-state> <label-mode>

label-mode-padding    = 2
label-mode-foreground = ${colors.foreground} 
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused             = %icon%
label-focused-background  = ${colors.background}
label-focused-foreground  = ${colors.magenta13}
label-focused-padding     = 1

; unfocused = Inactive workspace on any monitor
label-unfocused             = %icon%
label-unfocused-background  = ${self.label-focused-background}
label-unfocused-foreground  = ${colors.foreground}
label-unfocused-padding     = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible             = %icon%
label-visible-background  = ${self.label-focused-background}
label-visible-padding     = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent            = %icon%
label-urgent-background = ${colors.red9}
label-urgent-padding    = ${self.label-focused-padding}

[module/mpd]
include-file = $HOME/.config/polybar/modules/mpd

[module/xbacklight]
type = internal/xbacklight

format  = <label> <bar>
label   = 

bar-width = 10

bar-indicator             = |
bar-indicator-foreground  = ${colors.foreground}
bar-indicator-font        = 2

bar-fill            = ─
bar-fill-font       = 2
bar-fill-foreground = ${colors.foreground}

bar-empty             = ─
bar-empty-font        = 2
bar-empty-foreground  = ${colors.foreground}

[module/backlight-acpi]
inherit = module/xbacklight
type    = internal/backlight
card    = intel_backlight

[module/cpu]
include-file = $HOME/.config/polybar/modules/cpu

[module/memory]
include-file = $HOME/.config/polybar/modules/memory

[module/wlan]
include-file = $HOME/.config/polybar/modules/wlan

[module/eth]
type = internal/network

interface = enp0s3
interval  = 3.0

format-connected-prefix             = 
format-connected-prefix-foreground  = ${colors.foreground}

label-connected = %local_ip%

format-disconnected =

;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

[module/date]
include-file = $HOME/.config/polybar/modules/date

[module/volume]
include-file = $HOME/.config/polybar/modules/volume

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC
full-at = 98

format-charging               = <animation-charging> <label-charging>
format-discharging            = <ramp-capacity> <label-discharging>
format-full-prefix            = 
format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 =  
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate  = 750

[module/temperature]
type = internal/temperature

hwmon-path        = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_inpu
thermal-zone      = 0
warn-temperature  = 90
units             = true

format      = <ramp> <label>
format-warn = <ramp> <label-warn>

label             = %temperature%
label-background  = ${colors.background}
label-foreground  = ${colors.foreground}
label-padding     = 1

label-warn            = %temperature%
label-warn-foreground = ${colors.red9}
label-warn-background = ${colors.background}
label-warn-padding    = 1

ramp-0 = 1 
ramp-1 = 2 
ramp-2 = 3 
ramp-background = ${colors.background}
ramp-foreground = ${colors.foreground}
ramp-padding    = 1

[module/powermenu]
type = custom/menu

format-spacing = 1
format-padding = 1

label-open = ⏻
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.magenta5}

label-close =  cancel
label-close-foreground = ${colors.red9}

label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0        = reboot
menu-0-0-exec   = menu-open-1
menu-0-1        = power off
menu-0-1-exec   = menu-open-2
menu-1-0        = cancel
menu-1-0-exec   = menu-open-0
menu-1-1        = reboot
menu-1-1-exec   = sudo reboot
menu-2-0        = power off
menu-2-0-exec   = sudo poweroff
menu-2-1        = cancel
menu-2-1-exec   = menu-open-0

